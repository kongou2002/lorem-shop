generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type CartProduct {
  amount    Int
  productID String
}

type CategorySubcategory {
  Color String[]
  size  String[]
}

model address {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model cart {
  id      String        @id @default(auto()) @map("_id") @db.ObjectId
  product CartProduct[]
}

model category {
  id          String               @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime             @db.Date
  name        String
  subcategory CategorySubcategory?
  updatedAt   DateTime             @db.Date
}

model hero {
  id    String   @id @default(auto()) @map("_id") @db.ObjectId
  image String[]
}

model product {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  brand              String
  cartId             String?  @db.ObjectId
  category_name      String
  color              String[]
  description        String
  discountPercentage Float
  image              String[]
  price              Float
  rating             Float
  size               String[]
  stock              Int
  thumbnail          String
  title              String
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  cartId   String @db.ObjectId
  email    String @unique
  name     String
  password String
}

model wishlist {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
