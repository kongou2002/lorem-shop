generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model address {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model cart {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}

model category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @db.Date
  name      String
  updatedAt DateTime @db.Date
}

model product {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  brand              String
  category           String?  @map("category_name") @db.String
  color              String[]
  description        String
  discountPercentage Float
  image              String[]
  price              Float
  rating             Float
  size               String[]
  stock              Int
  thumbnail          String
  title              String
}

model user {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email Json?  @unique
}

model wishlist {
  id String @id @default(auto()) @map("_id") @db.ObjectId
}
